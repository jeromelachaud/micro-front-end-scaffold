{
  "name": "micro-front-end-scaffold",
  "version": "1.0.0",
  "description": "micro-front-end-scaffold",
  "main": "index.js",
  "author": "Jerome Lachaud",
  "email": "jerome.lachaud@gmail.com",
  "license": "MIT",
  "scripts": {
    "start": "npm run javascript & npm run watch-scss & npm run server",
    "server": "live-server --host=localhost",
    "javascript": "watchify index.js -o public/app.js --verbose --debug",
    "build-css": "node-sass --include-path scss src/sass/main.scss public/app.css",
    "watch-scss": "nodemon -e scss -x \"npm run build-css\""
  },
  "devDependencies": {
    "babel-core": "^6.13.2",
    "browserify": "^13.0.0",
    "live-server": "^0.9.2",
    "node-sass": "^3.8.0",
    "nodemon": "^1.10.0",
    "watchify": "^3.7.0"
  }
}
